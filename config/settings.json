{
	"css": [
		{
			"label": "Skript shadow",
			"vars": {
				"--skript-shadow": "{value}px"
			},
			"type": "num",
			"default": 8,
			"value": 7
		},
		{
			"label": "Skript shadow color",
			"vars": {
				"--skript-shadow-color": "{value}"
			},
			"type": "color",
			"default": "#000",
			"value": "#acc4d2"
		},
		{
			"label": "Blur background if sidebar is open",
			"vars": {
				"--sidebar-background-blur": [
					"3px",
					"0px"
				]
			},
			"type": "bool",
			"default": true,
			"value": false
		},
		{
			"label": "Darken background if sidebar is open",
			"vars": {
				"--sidebar-background-brightness": [
					"95%",
					"100%"
				]
			},
			"type": "bool",
			"default": true,
			"value": true
		},
		{
			"label": "Open sidebar smoothly",
			"vars": {
				"--sidebar-open-smoothly": [
					"500ms",
					"none"
				]
			},
			"type": "bool",
			"default": true,
			"value": true
		}
	],
	"options": [
		{
			"label": "Split skript into pages on export (PDF only)",
			"type": "bool",
			"default": true,
			"value": true
		}
	]
}
